#if defined(cl_arm_import_memory)
using clImportMemoryARM_fn = decltype(&clImportMemoryARM);
#endif

#if !defined(cl_arm_shared_virtual_memory) && \
	defined(CL_DEVICE_SVM_CAPABILITIES_ARM)
