#ifndef OPENCLX_BITS_PRAGMAS
#define OPENCLX_BITS_PRAGMAS

#if defined(__GNUC__)

#define CLX_PRAGMA(x) _Pragma(#x)
#define CLX_WARNING_PUSH CLX_PRAGMA(GCC diagnostic push)
#define CLX_WARNING_POP CLX_PRAGMA(GCC diagnostic pop)
#define CLX_WARNING_IGNORE(x) CLX_PRAGMA(GCC diagnostic ignored #x)
#define CLX_IGNORED_ATTRIBUTES CLX_WARNING_IGNORE(-Wignored-attributes)

#else

#define CLX_PRAGMA(x)
#define CLX_WARNING_PUSH
#define CLX_WARNING_POP
#define CLX_WARNING_IGNORE(x)
#define CLX_IGNORED_ATTRIBUTES

#endif

#endif // vim:filetype=cpp
